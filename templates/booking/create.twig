{% extends "_base.twig" %}

{% set pageTitle = "Create a Booking - " ~ customer.first_name ~ " " ~ customer.last_name %}
{% set backLink = "/customers/"~customer.customer_id %}

{% block body %}
<section>
	<div class="container container--narrow">
		<form class="process-form">
			<input type="hidden" name="action" value="customer-booking" />
			<div class="row">
				<div class="col-lg-12">
					<div class="form-group">
						<label>Customer</label>
						<div class="form-readout">
							{{customer.title}} {{customer.first_name}} {{customer.last_name}}
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-5">
				<div class="col-lg-12">
					<div class="form-group">
						<label>Start Date</label>
						<input type="text" class="form-control" name="business_name" />
						<div class="form-error">
							This is error text.
						</div>
						<div class="form-help">
							The start date of the booking.
						</div>
					</div>
					<div class="form-group">
						<label>End Date</label>
						<input type="text" class="form-control" name="business_name" />
						<div class="form-error">
							This is error text.
						</div>
						<div class="form-help">
							The end date of the booking.
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-5">
				<div class="col-lg-12">
					<div class="card">
						<div class="card__title">Rooms</div>
						<a href="#" class="button button--fw">Add a Room</a>
					</div>
				</div>
			</div>

			<div class="row mt-5">
				<div class="col">
					<button class="button button--primary button--fw" type="submit">Create Customer</button>
				</div>
			</div>
		</form>
	</div>
</section>
{% endblock %}
