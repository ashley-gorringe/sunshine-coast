{% extends "_base.twig" %}

{% set pageTitle = "Monthly Income" %}

{% block body %}
<section class="py-5">
	<div class="container container--narrow">
		<form method="get">
			<div class="form-group">
				<label>Year</label>
				<select class="form-control" name="year">
					{% for year in years %}
					<option value="{{year}}">{{year}}</option>
					{% endfor %}
				</select>
				<div class="form-error">
					This is error text.
				</div>
			</div>
			<div class="form-group">
				<button type="submit" class="button button--primary button--fw">View Year</button>
			</div>
		</form>
	</div>
</section>
