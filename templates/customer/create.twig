{% extends "_base.twig" %}

{% set pageTitle = "Create a Customer" %}
{# set backLink = "/" #}

{% block body %}
<section>
	<div class="container container--narrow">
		<form class="process-form">
			<input type="hidden" name="action" value="customer-create" />
			<div class="row">
				<div class="col-lg-2">
					<div class="form-group">
						<label>Title</label>
						<select class="form-control" name="title">
							<option value="">-</option>
							<option value="Mr">Mr</option>
							<option value="Mrs">Mrs</option>
							<option value="Miss">Miss</option>
							<option value="Dr">Dr</option>
						</select>
					</div>
				</div>
				<div class="col-lg-5">
					<div class="form-group">
						<label>First Name</label>
						<input type="text" class="form-control" name="first_name" />
						<div class="form-error">
							This is error text.
						</div>
					</div>
				</div>
				<div class="col-lg-5">
					<div class="form-group">
						<label>Last Name</label>
						<input type="text" class="form-control" name="last_name" />
						<div class="form-error">
							This is error text.
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-5">
				<div class="col-lg-12">
					<div class="form-group">
						<label>Business Name<span>Optional</span></label>
						<input type="text" class="form-control" name="business_name" />
						<div class="form-error">
							This is error text.
						</div>
						<div class="form-help">
							If the customer is a business, enter the comapny name.
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-5">
				<div class="col-lg-12">
					<div class="form-group">
						<label>Email Address</label>
						<input type="email" class="form-control" name="email_address" />
						<div class="form-error">
							This is error text.
						</div>
					</div>
					<div class="form-group">
						<label>Phone Number</label>
						<input type="tel" class="form-control" name="phone_number" />
						<div class="form-error">
							This is error text.
						</div>
						<div class="form-help">
							Please enter the phone number starting with 0 and containing no spaces. <br />For example: 07123456789
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-5">
				<div class="col-lg-12">
					<div class="form-group">
						<label>Address Line 1</label>
						<input type="text" class="form-control" name="address_line_1" />
						<div class="form-error">
							This is error text.
						</div>
					</div>
					<div class="form-group">
						<label>Address Line 2<span>Optional</span></label>
						<input type="text" class="form-control" name="address_line_2" />
						<div class="form-error">
							This is error text.
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-lg-8">
					<div class="form-group">
						<label>Town/City</label>
						<input type="text" class="form-control" name="town_city" />
						<div class="form-error">
							This is error text.
						</div>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="form-group">
						<label>Post Code</label>
						<input type="text" class="form-control" name="post_code" />
						<div class="form-error">
							This is error text.
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-5">
				<div class="col">
					<button class="button button--primary button--fw" type="submit">Create Customer</button>
				</div>
			</div>
		</form>
	</div>
</section>
{% endblock %}
